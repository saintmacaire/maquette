					{% else %} 
						{{ item.get_field('begin')|date('j F Y') }}
					{% endif %}
					
				</div>
				<div class="col-12 col-md-5 green date pt20 color3">
					{{ item.title }}
					
				</div>
			</a>
			{% endfor %}
		{% endfor %}
		{% for item in events if now|date('U') <= item.get_field('begin')|date('U') or now|date('U') <= item.get_field('end')|date('U') %}
			{% for term in item.terms  if 'vie locale' in term.name %}
